
<div class="main" data-page-id="health">
	<div class="container">

		
<div class="search-area">
		<div class="row">
			
			<div class="col-xs-8 col-md-8">
				
		<%= form_tag health_path,  class: "form-search", :method => :get do %>
			<div class="form-group">
				<%= text_field_tag :health, params[:health], class: "input-medium search-query" %>
				<%=submit_tag "Search", :name => nil,  class: "btn btn-small btn-info" %>		
				</div>	
		<% end %>
	
		

		
 		
			
			</div>


			<div class="col-xs-4 col-md-4"></div>
		</div><!-- /.row -->
</div><!--/.search-area -->
		<div class="row">
			<div class="col-xs-12 col-md-12" >
				<!--<div class="container-fluid" id="map-canvas"></div> /jumbotron with diagnosis and definition-->
				<p class="search-stats" data-total="<%#= @total %>"><%#= @total == 0 ? "No Health Centers Found" : "#{@total} Health Centers Found" %></p>
			</div>
		</div>
		
		<div class="row">
			<div class="search-list">
			
			<%# @centers.each do |center| %>
				<div class="col-xs-4 col-md-4 search-item%">
					<%= @health %>
				</div>
					
				

			<%# end %>
			</div>
		
		</div><!--/.row -->

		<div class="row">
			<div class="col-xs-6 col-md-6">
				<%#= will_paginate @centers unless @centers.empty? %> 
			</div>
		</div>

	</div>
</div>
